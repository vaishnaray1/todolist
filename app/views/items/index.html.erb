<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Category</th>
      <th>Priority</th>
      <th>Completed?</th>
      <th>Due date</th>
      <th>Description</th>
      <th>Interactions count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.owner_id %></td>
        <td><%= item.category_id %></td>
        <td><%= item.priority %></td>
        <td><%= item.completed %></td>
        <td><%= item.due_date %></td>
        <td><%= item.description %></td>
        <td><%= item.interactions_count %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

