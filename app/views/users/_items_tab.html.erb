<p id="notice"><%= notice %></p>

<h2><%= current_user.username.capitalize() %>'s tasks</h2>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Category</th>
      <th>Priority</th>
      <th>Completed??</th>
      <th>Due date</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <body>

      <% items.each do |item| %>
        <div class="row mb-4">
          <div class="col-md-6 offset-md-3">
            <%= render "items/item", item: item %>
          </div>
        </div>
      <% end %>

  </body>

</table>

